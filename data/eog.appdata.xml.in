<?xml version="1.0" encoding="UTF-8"?>
<application>
  <id type="desktop">xviewer.desktop</id>
  <licence>CC0</licence>
  <description>
    <_p>
      Xviewer is the official image viewer for the GNOME desktop.
      It integrates with the GTK+ look and feel of GNOME, and supports many image
      formats for viewing single images or images in a collection.
    </_p>
    <_p>
      Xviewer also allows to view the images in a fullscreen slideshow mode
      or set an image as the desktop wallpaper.
      It reads the camera tags to automatically rotate your images in the correct
      portrait or landscape orientation.
    </_p>
  </description>
  <url type="homepage">https://wiki.gnome.org/Apps/Xviewer</url>
  <screenshots>
    <screenshot type="default">https://git.gnome.org/browse/xviewer/plain/data/screenshot.png</screenshot>
  </screenshots>
  <updatecontact>xviewer-list@gnome.org</updatecontact>
</application>
